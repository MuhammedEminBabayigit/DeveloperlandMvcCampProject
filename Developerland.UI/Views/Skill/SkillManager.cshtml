@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewBag.Title = "SkillManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>YETENEK LİSTESİ</h2>
<br />

<table class="table table-bordered">

    <tr>
        <th>Yetenek Adı</th>
        <th>Oran</th>
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SkillName</th>
            <td>@item.SkillRange</td>
            <td><a href="/Skill/EditTalent/@item.SkillID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Skill/DeleteTalent/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }


</table>
<a href="/Skill/AddTalent/" class="btn btn-outline-success">Yeni Yetenek Ekle</a>
<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>