@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewBag.Title = "CommentsPartial";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />
<br />
<div class="col-md-9">
    <div class="card">
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="activity">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/avatar.png" alt="user image">
                                <span class="username">
                                    <a href="#">@item.UserName</a>
                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                </span>
                                <span class="description">Yorum Yaptı - @item.CommentDate.ToShortDateString()</span>
                            </div>
                            <!-- /.user-block -->
                            <p>
                                @item.CommentContent
                            </p>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("UserCommentPartial","WriterPanel")


