@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="wrapper">

    <div class="content-wrapper">
        <!-- Main content -->
        @using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
        {
            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Admin Düzenleme Sayfası</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">Admin ID</label>
                                    @Html.TextBoxFor(x => x.AdminID, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Adminin Tam Adı</label>
                                    @Html.TextBoxFor(x => x.AdminFullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AdminFullName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Nickname</label>
                                    @Html.TextBoxFor(x => x.AdminNickName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AdminNickName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    @Html.TextBoxFor(x => x.AdminEmail, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AdminEmail, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Rol Giriniz</label>
                                    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AdminRole, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Parola</label>
                                    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a href="#" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                    </div>
                </div>
            </section>
        }
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

</div>