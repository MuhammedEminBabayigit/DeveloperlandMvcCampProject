@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/colorlib-regform-7/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/colorlib-regform-7/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Yeni Admin Ekle</h2>
                        @using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>

                                <input type="text" name="AdminFullName" id="name" placeholder="Ad - Soyad" />
                                @Html.ValidationMessageFor(x => x.AdminFullName)
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="AdminNickName" id="AdminNickName" placeholder="NickName" />
                                @Html.ValidationMessageFor(x => x.AdminNickName)
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="AdminEmail" id="email" placeholder="Mail Adresiniz" />
                                @Html.ValidationMessageFor(x => x.AdminEmail)
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="AdminRole" id="AdminNickName" placeholder="Rol" />
                                @Html.ValidationMessageFor(x => x.AdminRole)
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="AdminPassword" id="pass" placeholder="Password" />
                                @Html.ValidationMessageFor(x => x.AdminPassword)
                            </div>
                            <div class="form-group form-button">
                                @*<input type="submit" name="signup" id="signup" class="form-submit" value="Register" />*@
                                <button type="submit" class="form-submit">Ekle</button>
                            </div>
                        }
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/AdminLTE-3.0.4/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    @*<script src="~/AdminLTE-3.0.4/colorlib-regform-7/vendor/jquery/jquery.min.js"></script>*@
    <script src="~/AdminLTE-3.0.4/colorlib-regform-7/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>